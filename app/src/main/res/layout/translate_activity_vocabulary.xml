<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary1_2"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="17dp"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="0dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/option_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_search" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search"
                        android:layout_weight="1"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/wordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pakno"
            android:textColor="@color/textColor"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:textStyle="bold"
            android:textSize="48sp" />

        <Button
            android:id="@+id/saveVocabulary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu từ vựng" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            android:layout_marginVertical="8dp" />

        <TextView
            android:id="@+id/loaitu"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Adjective"
            android:textColor="@color/textColor"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/phoneticText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pak no"
            android:layout_gravity="center"
            android:textColor="@color/textColor"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/meaningText"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="1. someone deranged and possibly dangerous."
            android:textColor="@color/primary1_2"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/exampleText"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:text="a beautiful bunch of flowers" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>