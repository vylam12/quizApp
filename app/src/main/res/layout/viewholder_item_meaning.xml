<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/typeText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Adjective"
        android:textColor="@color/textColor"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDefinitions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/meaningText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="1. someone deranged and possibly dangerous."
        android:textColor="@color/primary1_2"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/exampleText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:text="a beautiful bunch of flowers" />

    <TextView
        android:id="@+id/tvSynonyms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <!-- Trái nghĩa -->
    <TextView
        android:id="@+id/tvAntonyms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        android:paddingTop="4dp"/>
</LinearLayout>