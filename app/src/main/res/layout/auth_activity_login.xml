<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_20sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/img_width"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            app:srcCompat="@drawable/logo_app" />

        <TextView
            android:id="@+id/textView2"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/title_text_login"
            android:textSize="@dimen/_18ssp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:text="@string/describe_login"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/md_theme_outline"
            android:textSize="@dimen/_16ssp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailTIL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textColorHint="@color/md_theme_onSecondaryContainer"
            app:boxStrokeColor="@color/md_theme_onSecondaryContainer">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/input_gmail"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordTIL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColorHint="@color/md_theme_onSecondaryContainer"
            app:boxStrokeColor="@color/md_theme_onSecondaryContainer"
            app:passwordToggleTint="@color/black"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/input_password"
                android:inputType="textPassword"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/lnremember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/string_remember"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/secondary_900"
                android:buttonTint="@color/secondary_900"
                android:textSize="@dimen/_14ssp"  />

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/forgot_pass"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/secondary_900"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_background"
            android:text="@string/string_login"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />


        <LinearLayout
            android:id="@+id/lnOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/md_theme_outline" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_or"
                android:paddingStart="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/md_theme_outline"
                android:paddingEnd="@dimen/_5sdp"
                android:textSize="@dimen/_15ssp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/md_theme_outline" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnGG"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/btn_gg_background"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_16sdp"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/img_gg_height"
                android:layout_height="@dimen/img_gg_width"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_5sdp"
                app:srcCompat="@drawable/logo_gg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Continue with Google"
                android:textColor="@color/secondary_700"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/top_80sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donâ€™t have an account?"
                android:textColor="@color/secondary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/textSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="@string/string_sign_up"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#1676F3"
                android:textSize="@dimen/_16ssp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>