<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF">


    <ImageView
        android:id="@+id/logoQuizResult"
        android:layout_width="@dimen/dimen_150"
        android:layout_height="@dimen/dimen_150"
        android:layout_marginTop="@dimen/dimen_50"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/titleQuizResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:fontFamily="@font/poppins_extrabold"
        android:text="@string/title_result_quiz"
        android:textColor="@color/md_theme_primary"
        android:textSize="@dimen/font_38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoQuizResult" />


    <TextView
        android:id="@+id/desResultQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginBottom="@dimen/dimen_20"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/des_result_quiz"
        android:textAlignment="center"
        android:textColor="@color/md_theme_onSecondaryContainer"
        android:textSize="@dimen/font_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleQuizResult" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desResultQuiz">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icWrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6"
                android:contentDescription="@null"
                app:layout_constraintEnd_toStartOf="@id/wrongText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close_circle" />

            <TextView
                android:id="@+id/wrongText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/text_wrong"
                android:textColor="@color/md_theme_primary"
                android:textSize="@dimen/font_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icWrong"
                app:layout_constraintTop_toTopOf="@id/icWrong" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardWrong">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icExact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check_circle" />

            <TextView
                android:id="@+id/correctText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/text_correct"
                android:textColor="@color/md_theme_primary"
                android:textSize="@dimen/font_18"
                app:layout_constraintStart_toEndOf="@id/icExact"
                app:layout_constraintTop_toTopOf="@id/icExact" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llTimeQuiz"
        android:layout_width="@dimen/dimen_150"
        android:layout_height="@dimen/dimen_93"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/result_quiz_bg"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/llQuestionQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardCorrect">

        <ImageView
            android:id="@+id/icQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_question" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.5"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/time_quiz"
            android:textColor="@color/md_theme_primaryContainer"
            android:textSize="@dimen/font_17" />
    </LinearLayout>


    <Button
        android:id="@+id/btnReQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/button_color_bg"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/btn_re_quiz"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llQuestionQuiz" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@drawable/button_white_bg"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/btn_home"
        android:textColor="@color/md_theme_primary"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toBottomOf=""
        app:layout_constraintTop_toBottomOf="@id/btnReQuiz" />

    <LinearLayout
        android:id="@+id/llQuestionQuiz"
        android:layout_width="155dp"
        android:layout_height="95dp"
        android:background="@drawable/result_quiz_bg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/llTimeQuiz"
        app:layout_constraintTop_toTopOf="@id/llTimeQuiz">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_question" />

        <TextView
            android:id="@+id/totalQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.5"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/total_question"
            android:textColor="@color/md_theme_primaryContainer"
            android:textSize="17sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>