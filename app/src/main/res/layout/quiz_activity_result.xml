<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_primary"
            android:text="Quiz Completed" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_onSecondaryContainer"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:text="You have successfully completed the quiz! " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="95dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/result_quiz_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_question" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="35 Minutes"
                    android:textColor="@color/md_theme_primaryContainer"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="95dp"
                android:background="@drawable/result_quiz_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_question" />

                <TextView
                    android:id="@+id/totalQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="4 Questions"
                    android:textColor="@color/md_theme_primaryContainer"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/ic_check_circle" />

                <TextView
                    android:id="@+id/correctText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Correct  Answers"
                    android:textSize="18dp"
                    android:textColor="@color/md_theme_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/ic_close_circle" />

                <TextView
                    android:id="@+id/wrongText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="3 Wrong Answers"
                    android:textSize="18dp"
                    android:textColor="@color/md_theme_primary" />
            </LinearLayout>
        <Button
            android:id="@+id/btnReQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_color_bg"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="START QUIZ AGAIN" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_white_bg"
            android:text="HOME"
            android:textColor="@color/md_theme_primary"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>