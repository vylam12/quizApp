<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/itemAvatarChat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/useravatar"
            app:strokeWidth="2dp"
            android:layout_marginEnd="10dp"
            app:strokeColor="@color/white"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/RoundedImage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:background="@drawable/bg_other_message"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/itemMessageOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text=" "
                android:textColor="@color/md_theme_onSecondary"
                android:textSize="14sp" />

                <View
                    android:id="@+id/dividerUserView"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/dashed_line"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/itemMessageTranslation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Xin chào, bạn khỏe không?"
                    android:visibility="gone"
                    android:textColor="@color/md_theme_onSecondary"
                    android:textSize="14sp" />

            </LinearLayout>
    </LinearLayout>

</LinearLayout>

