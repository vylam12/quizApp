<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/primary1_2"/>
                    <size android:width="24dp" android:height="24dp"/>
                    <stroke android:width="1dp" android:color="@color/primary1_2"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_check"
                android:gravity="center"/>
        </layer-list>
    </item>
    <item android:state_checked="true" android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#F44336"/> <!-- Màu đỏ sai -->
                    <size android:width="24dp" android:height="24dp"/>
                    <stroke android:width="1dp" android:color="#F44336"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_close"
                android:gravity="center"/>
        </layer-list>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Màu nền mặc định -->
            <size android:width="24dp" android:height="24dp"/>
            <stroke android:width="1dp" android:color="@color/black"/>
        </shape>
    </item>
</selector>